<main class="main-first-page">

    <div class="container">
        <h1 id="welcome">Welcome!</h1>
        <ul class="nav nav-tabs">
            <li class="active"><a data-toggle="tab" href="#login">LOG IN</a></li>
            <li><a data-toggle="tab" href="#signup">SIGN UP</a></li>
        </ul>
        <div class="tab-content">
            <div id="login" class="tab-pane fade  in active">
                <h2>Log in to your account</h2>

                <form method="post" >
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input type="email" class="form-control center-block" id="email" placeholder="E-mail">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control center-block" id="password"
                               placeholder="Password">
                    </div>

                    <div class="form-group center-block">
                        <div class="check center-block">
                            <input type='checkbox' class="checkbox-login" name='thing' value='valuable' id="thing"/><label for="thing">
                                <div id="remember">Remember</div>
                            </label>
                        </div>
                    </div>

                    <div class="form-group center-block">
                        <div class="check center-block">
                            <button type="submit" class="btn login">Login</button>
                        </div>
                    </div>
                    <a id="forgot-password">Forgot your password?</a>

                    <h2 id="or">Or</h2>




                </form>

                <div class="form-group center-block">
                    <div class="check-google center-block">
                        <a class="btn btn-block btn-social btn-google">
                            <i class="fa fa-google"></i> Log in with Google
                        </a>
                    </div>
                </div>

                <div class="form-group center-block">
                    <div class="check-facebook center-block">
                        <a href="/auth/facebook" class="btn btn-block btn-social btn-facebook">
                            <i class="fa fa-facebook"></i> Log in with Facebook
                        </a>
                    </div>
                </div>



            </div>
            <div id="signup" class="tab-pane fade">
                <h2>Sign up for your account</h2>

                <form>
                    <div class="form-group">
                        <label for="email">Account name*</label>
                        <input type="email" class="form-control center-block" id="accountName" placeholder="Account name">
                    </div>
                    <div class="form-group">
                        <label for="password">First name*</label>
                        <input type="password" class="form-control center-block" id="firstName"
                               placeholder="First name">
                    </div>

                    <div class="form-group">
                        <label for="email">E-mail*</label>
                        <input type="email" class="form-control center-block" id="email" placeholder="E-mail">

                    </div>
                    <div class="form-group">

                        <input type="password" class="form-control center-block pwd" value="iamapassword">
          <span class="input-group-btn">

          </span>
                    </div>


                    <div class="form-group">
                        <label for="email">Mobile (Optional)</label>
                        <input type="email" class="form-control center-block" id="email" placeholder="Mobile">
                    </div>
                    <div class="form-group">
                        <label for="password">Password*</label>
                        <input type="password" class="form-control center-block" id="password"
                               placeholder="Password">

                    </div>

                    <div class="form-group center-block">
                        <div class="check center-block">
                            <input type='checkbox' class="checkbox-signup" name='signup' value='valuable' id="signup"/><label for="signup">
                                <div id="remember">Remember</div>
                            </label>
                        </div>
                    </div>

                    <div class="form-group center-block">
                        <div class="check center-block">
                            <button type="button" class="btn login">Login</button>
                        </div>
                    </div>
                    <a id="forgot-password">Forgot your password?</a>

                    <h2 id="or">Or</h2>

                    <div class="form-group center-block">
                        <div class="check-google center-block">
                            <a class="btn btn-block btn-social btn-google">
                                <i class="fa fa-google"></i> Log in with Google
                            </a>
                        </div>
                    </div>

                    <div class="form-group center-block">
                        <div class="check-facebook center-block">
                            <a class="btn btn-block btn-social btn-facebook">
                                <i class="fa fa-facebook"></i> Log in with Facebook
                            </a>
                        </div>
                    </div>


                </form>
            </div>


